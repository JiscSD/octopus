{
    "root": true,
    "env": {
        "commonjs": true,
        "es6": true,
        "jest": true,
        "node": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 10,
        "project": "./tsconfig.json"
    },
    "ignorePatterns": [
        "webpack.config.js",
        "jest.config.ts",
        "docs"
    ],
    "plugins": [
        "@typescript-eslint"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:@typescript-eslint/recommended-requiring-type-checking",
        "airbnb-typescript/base",
        "prettier"
    ],
    "overrides": [
        { // in theory we have no .js files but just in case..
            "files": [
                "src/*.js"
            ],
            "rules": {
                "require-jsdoc": "off",
                "func-names": "off"
            }
        },
        {
            // enforce precedence of root .eslintrc.json
            "files": ["*.ts", "*.tsx"],
            "extends": [
                "../.eslintrc.json"
            ]
        }
    ]
}
