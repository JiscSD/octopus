{
    "name": "octopus",
    "version": "1.0.0",
    "description": "A new way to publish your scientific work that's fast, free and fair.",
    "author": "0-3 Years Team",
    "keywords": [],
    "license": "GPL-3.0-only",
    "repository": {
        "type": "git",
        "url": "https://github.com/Jisc/octopus/tree/main/api"
    },
    "engines": {
        "node": "20.x"
    },
    "prisma": {
        "seed": "tsx prisma/seed.ts"
    },
    "scripts": {
        "build": "swc src -d dist --copy-files -s false && ./scripts/copy-katex-assets.sh",
        "deploy:int": "sls deploy --stage int",
        "deploy:prod": "sls deploy --stage prod",
        "dev": "concurrently npm:dev:start npm:dev:watch npm:dev:type",
        "dev:start": "sls offline start -c serverless-offline.yml --reloadHandler --httpPort 4003 --host 0.0.0.0 --stage local",
        "dev:type": "tsc --noEmit -w --preserveWatchOutput",
        "dev:watch": "swc prisma -d dist --copy-files && ./scripts/copy-katex-assets.sh && swc src -d dist --copy-files -w",
        "format:check": "npx prettier --check src/",
        "format:write": "npx prettier --write src/",
        "lint:check": "eslint src/",
        "lint:fix": "eslint --fix src/",
        "prepare": "cd .. && husky install",
        "seed:local": "STAGE=local npx prisma migrate reset --force",
        "test:local": "STAGE=local jest --runInBand --testTimeout=60000",
        "test:watch": "npm run test:local -- --watch",
        "type": "tsc --noEmit",
        "ariArchivedCheck": "tsx scripts/ariArchivedCheck.ts",
        "ariImport": "tsx scripts/ariImport.ts",
        "backfillCoAuthors": "tsx scripts/backfillCoAuthors.ts",
        "createOrganisationalAccounts": "tsx scripts/createOrganisationalAccounts.ts",
        "createTopicMappings": "tsx scripts/createTopicMappings.ts",
        "createTopics": "tsx scripts/createTopics.ts",
        "createUserMappings": "tsx scripts/createUserMappings.ts",
        "reindex": "tsx scripts/reindex.ts",
        "updateOrganisationalAccounts": "tsx scripts/updateOrganisationalAccounts.ts"
    },
    "dependencies": {
        "@middy/core": "^4.7.0",
        "@middy/do-not-wait-for-empty-event-loop": "^4.7.0",
        "@middy/http-json-body-parser": "^4.7.0",
        "@opensearch-project/opensearch": "^2.5.0",
        "@paralleldrive/cuid2": "^2.2.2",
        "@prisma/client": "^5.11.0",
        "@sparticuz/chromium": "^132.0.0",
        "ajv": "^8.12.0",
        "ajv-formats": "^2.1.1",
        "aws-lambda": "^1.0.7",
        "axios": "^1.8.3",
        "cheerio": "^1.0.0-rc.12",
        "dotenv": "16.4.5",
        "entities": "^6.0.0",
        "html-to-text": "^9.0.5",
        "isomorphic-dompurify": "^2.22.0",
        "jsonwebtoken": "^9.0.2",
        "katex": "^0.16.21",
        "luxon": "^3.4.3",
        "nodemailer": "^6.9.9",
        "puppeteer-core": "^24.2.0",
        "supertest": "^6.3.3"
    },
    "devDependencies": {
        "@aws-sdk/client-ecs": "^3.709.0",
        "@aws-sdk/client-s3": "^3.413.0",
        "@aws-sdk/client-ses": "^3.413.0",
        "@aws-sdk/client-sqs": "^3.413.0",
        "@swc/cli": "^0.4.1-nightly.20240914",
        "@swc/core": "^1.7.36",
        "@types/aws-lambda": "^8.10.121",
        "@types/cheerio": "^0.22.32",
        "@types/jest": "^29.5.4",
        "@types/jsonwebtoken": "^9.0.2",
        "@types/katex": "^0.16.7",
        "@types/luxon": "^3.3.2",
        "@types/node": "^20.16.10",
        "@types/nodemailer": "^6.4.10",
        "@types/serverless": "^3.12.15",
        "@types/supertest": "^2.0.12",
        "@typescript-eslint/eslint-plugin": "^5.62.0",
        "@typescript-eslint/parser": "^5.62.0",
        "concurrently": "^9.0.1",
        "eslint": "^8.49.0",
        "eslint-config-airbnb-typescript": "^16.2.0",
        "eslint-config-prettier": "^8.10.0",
        "eslint-plugin-import": "^2.28.1",
        "eslint-plugin-prettier": "^4.2.1",
        "husky": "^8.0.3",
        "jest": "^29.7.0",
        "lint-staged": "^13.3.0",
        "prettier": "^2.8.8",
        "prisma": "^5.11.0",
        "puppeteer": "^24.2.0",
        "serverless": "^4.4.7",
        "serverless-offline": "^14.3.4",
        "serverless-plugin-split-stacks": "^1.14.0",
        "serverless-prune-plugin": "^2.1.0",
        "ts-jest": "^29.1.1",
        "ts-loader": "^9.4.4",
        "tsx": "^4.19.2",
        "typescript": "^5.2.2"
    },
    "optionalDependencies": {
        "@swc/core-linux-x64-musl": "1.9.3"
    },
    "overrides": {
        "micromatch": "^4.0.8",
        "form-data": "^4.0.4"
    }
}
