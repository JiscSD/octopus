        "react": "^18.2.0",
        "react-click-away-listener": "^2.2.3",
        "react-dom": "^18.2.0",
        "react-dropzone": "^14.2.3",
        "react-icons": "^5.0.1",
        "react-spinners": "^0.13.8",
        "react-xarrows": "^2.0.2",
        "swr": "^2.2.5",
        "zustand": "^4.5.2"
    },
    "devDependencies": {
        "@contentful/rich-text-types": "^16.3.5",
        "@lhci/cli": "^0.15.1",
        "@tailwindcss/forms": "^0.5.9",
        "@tailwindcss/typography": "^0.5.15",
        "@testing-library/dom": "^9.3.4",
