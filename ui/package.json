        "concurrently": "^8.2.2",
        "dotenv": "^16.4.5",
        "eslint": "8.57.0",
        "eslint-config-next": "^14.2.25",
        "eslint-plugin-jsx-a11y": "^6.7.1",
        "eslint-plugin-prettier": "^5.1.3",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "postcss": "^8.4.36",
        "prettier": "^3.2.5",
        "prettier-plugin-tailwindcss": "^0.6.9",
