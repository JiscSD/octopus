{
    "name": "ui",
    "version": "1.0.0",
    "description": "Octopus is a new way to register research. It is the place to publish the version of record, enabling peer review and quality assessment and allowing the academic community to build upon the latest work.",
    "author": "0-3 Years Team",
    "keywords": [],
    "license": "GPL-3.0-only",
    "repository": {
        "type": "git",
        "url": "https://github.com/Jisc/octopus/tree/main/ui"
    },
    "engines": {
        "node": "20.x"
    },
    "scripts": {
        "dev": "concurrently npm:dev:*",
        "dev:next": "NEXT_PUBLIC_VERCEL_GIT_COMMIT_REF=local next dev --experimental-https -p 3001",
        "dev:types": "tsc --noEmit --incremental -w --preserveWatchOutput",
        "customInstall": "npm config set \"@tiptap-pro:registry\" https://registry.tiptap.dev/ && npm config set \"//registry.tiptap.dev/:_authToken\" ${npm_config_tiptap_token} && npm ci",
        "build": "next build",
        "start": "next start -p 3000",
        "start:int": "NEXT_PUBLIC_VERCEL_GIT_COMMIT_REF=int next start -p 3000",
        "test": "jest \".*\\.test\\.tsx\"",
        "lint": "next lint",
        "format:check": "npx prettier --check src/",
        "format:write": "npx prettier --write src/",
        "lighthouse": "lhci autorun"
    },
    "dependencies": {
        "@contentful/rich-text-plain-text-renderer": "^16.0.13",
        "@contentful/rich-text-react-renderer": "^15.19.6",
        "@dnd-kit/sortable": "^10.0.0",
